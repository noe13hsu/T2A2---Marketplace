<style>
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
    }
    
    .user-game-details {
        display: flex;
        margin-bottom: 10px;
        background: white;
        padding :10px;
    }

    p {
        margin: 0;
        margin-left: 10px;
    }

    .fake-img {
        width: 110px;
        height: 130px;
    }
</style>

<h1>Your Cart</h1>

<% if @num_of_items == 0 %>
    <p>Your cart is empty</p>
<% else %>
    <p>There are <%= @num_of_items %> items in your cart</p>
    <% @cart_items.each do |cart_item| %>
        <div class="user-game-details border border-secondary">
            <% if cart_item.product.cover.attached? %>
                <%= image_tag cart_item.product.cover, width: 110, height: 130 %>
            <% else %>
                <div class="fake-img bg-dark"></div>
            <% end %>
            <div>
                <p><%= cart_item.product.name %></p>
                <p><%= cart_item.product.console %></p>
                <p>$<%= cart_item.product.price %></p>
                <p><%= link_to "Delete Item", delete_cart_item_path(cart_item), method: :delete, data: { confirm: "Are you sure?" } %></p>
            </div>    
        </div>
    <% end %>
    <h3>Subtotal: $<%= @subtotal %></h3>
<% end %>