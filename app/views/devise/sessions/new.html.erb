<style>
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100vh;
  }
</style>

<h1>Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row align-items-center">
    <%= f.label :email, class: "col-sm-2 col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, class: "form-control border border-dark" %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
    </div>
  </div>
  <div class="row align-items-center">
    <%= f.label :password, class: "col-sm-2 col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.password_field :password, autofocus: true, class: "form-control border border-dark" %>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-light border border-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
