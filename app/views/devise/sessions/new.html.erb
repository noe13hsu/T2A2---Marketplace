<style>
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100vh;
  }
</style>

<h1>Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control border border-dark" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, class: "form-control border border-dark" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "form-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-light border border-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
