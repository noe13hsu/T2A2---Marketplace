<style>
    .container-fluid {
        flex-direction: row;
    }

    .name_and_menu {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .navbar-toggler {
        width: 60px;
    }

    .navbar-brand {
        margin-right: 0;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <img src="https://via.placeholder.com/80x75" alt="" class="d-inline-block align-text-top">
        <div class="name_and_menu">
            <%= link_to "Second Hand Games", root_path, class:"navbar-brand" %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <% if user_signed_in? %>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <%= link_to "Your Account", show_user_details_path, class:"nav-link active" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Your Products", show_user_products_path, class:"nav-link active" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Your Cart", show_user_cart_path, class:"nav-link active" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Add Product", new_product_path, class:"nav-link active" %>
                    </li>
                    </li>
                    <% if current_user.has_role? :admin %>
                        <li class="nav-item">
                            <%= link_to "Admin Dashboard", admin_path, class:"nav-link active" %>
                        </li>
                    <% end %>
                    <li class="nav-item">
                        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"nav-link active" %>
                    </li>
                </ul>
            <% else %>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <%= link_to "Sign Up", new_user_registration_path, class:"nav-link active" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Log In", new_user_session_path, class:"nav-link active" %>
                    </li>
                </ul>
            <% end %>
            <%= render "layouts/search" %>
        </div>
    </div>
</nav>