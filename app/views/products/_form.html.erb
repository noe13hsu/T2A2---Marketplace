<%= form_with model: @product, local: true do |f| %>
    <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control border border-dark" %>
    </div>
    <div class="mb-3">
        <%= f.label :price, class: "form-label" %>
        <%= f.text_field :price, class: "form-control border border-dark" %>
    </div>
    <div class="mb-3">
        <%= f.label :console, class: "form-label" %>
        <%= f.text_field :console, class: "form-control border border-dark" %>
    </div>
    <div class="mb-3">
        <%= f.label :condition, class: "form-label" %>
        <%= f.text_field :condition, class: "form-control border border-dark" %>
    </div>
    <%= link_to "Cancel", :back, class: "btn btn-dark" %>
    <%= f.submit class: "btn btn-light border border-dark" %>
<% end %>
