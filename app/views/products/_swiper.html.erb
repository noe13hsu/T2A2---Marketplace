<% products.each do |product| %>
    <div class="swiper-slide">
        <div class="mt-2">
        <% if product.cover.attached? %>
            <%= image_tag product.cover, width: 110, height: 130 %>
            </div>
        <% else %>
            <%= image_tag src="https://via.placeholder.com/110x130" %>
        <% end %>
        </div>
        <div>
            <p class="mb-0 ps-2 pe-2 text-center"><%= link_to product.name, product_path(product) %></p>
            <p class="mb-0 ps-2 pe-2 text-center"><%= product.console %></p>
            <p class="mb-0 ps-2 pe-2 text-center">$<%= product.price %></p>
        </div>
    </div>
<% end %>