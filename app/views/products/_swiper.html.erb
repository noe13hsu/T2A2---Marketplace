<% products.each do |product| %>
    <div class="swiper-slide">
        <div class="mt-2">
        <% if product.cover.attached? %>
            <%= cl_image_tag product.cover.key, crop: :scale, width: 110, height: 145, cloud_name: "noe13hsu" %>
        <% else %>
            <%= image_tag src="https://via.placeholder.com/110x130" %>
        <% end %>
        </div>
        <div>
            <p class="mb-0 ps-2 pe-2 text-center"><%= link_to product.name, product_path(product) %></p>
            <p class="mb-0 ps-2 pe-2 text-center"><%= product.console %></p>
            <p class="mb-0 ps-2 pe-2 text-center">$<%= "%.2f" % product.price %></p>
        </div>
    </div>
<% end %>