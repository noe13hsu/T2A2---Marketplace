<style>
    .swiper-slide img {
        margin-top: 10px;
    }

    .product-details {
        height: 120px;
        padding: 0 5px 0 5px;
    }

    .fake-img {
        width: 110px;
        height: 130px;
    }
</style>


<% products.each do |product| %>
    <div class="swiper-slide">
        <% if product.cover.attached? %>
            <%= image_tag product.cover, width: 110, height: 130 %>
        <% else %>
            <div class="fake-img bg-dark"></div>
        <% end %>
        <div class="product-details">
            <p><%= link_to product.name, product_path(product) %></p>
            <p><%= product.console %></p>
            <p>$<%= product.price %></p>
        </div>
    </div>
<% end %>