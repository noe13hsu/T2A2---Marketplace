<style>
body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100vh;
  }

  .swiper-container {
    width: 100%;
    height: 100%;
  }

  .swiper-wrapper {
    margin-bottom: 15px;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 14px;
    background: #F2F2F2;
    height: 34vh;

    justify-content: flex-end;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    object-fit: cover;
  }

  .padding {
    padding-top: 5px;
    padding-bottom: 5px;
  }

  p {
      margin-bottom: 0;
  }
</style>

<div class="row">
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        PS4
    </div>
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        PS5
    </div>
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        Switch
    </div>
</div>
<div class="row">
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        Xbox X/S
    </div>
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        Xbox One
    </div>
    <div class="col text-center border-bottom border-2 border-dark fs-6 text padding">
        PC
    </div>
</div>
<br>

<div class="swiper-container mySwiper">
    <div class="swiper-wrapper">
        <%= render partial: "products/swiper", locals: {products: @first_half} %>
    </div>
    <div class="swiper-pagination"></div>
</div>
<div class="swiper-container mySwiper">
    <div class="swiper-wrapper">
        <%= render partial: "products/swiper", locals: {products: @second_half} %>
    </div>
    <div class="swiper-pagination"></div>
</div>
        