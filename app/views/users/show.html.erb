<style>
body {
    background: #BFBFBF;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100vh;
  }

  .swiper-container {
    width: 100%;
    height: 100%;
  }

  .swiper-wrapper {
    margin-bottom: 15px;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 14px;
    background: #F2F2F2;
    height: 37vh;

    justify-content: flex-end;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    object-fit: cover;
  }

  .padding {
    padding-top: 5px;
    padding-bottom: 5px;
  }

  .product-details {
      height: 120px;
      padding: 0 5px 0 5px;
  }

  p {
      margin-bottom: 0;
  }
</style>
<h1>Your Details</h1>

<p>Name: <%= @user.full_name %></p>
<p>Location: <%= @user.location %></p>
<p>Email: <%= @user.email %></p>
<p>Mobile: <%= @user.mobile %></p>

<p><%= link_to "Change password", edit_user_registration_path %></p>
<p><%= link_to "Update Details" %></p>
<br>
<%= link_to "Back", :back %>
<br>
<br>
<h1>Your Games</h1>
<% if @user.products.length > 0 %>
    <p>You have listed <%=  @user.products.length %> games</p>
    <%= link_to "Show all", show_all_products_path(@user) %>
    <div class="swiper-container mySwiper">
        <div class="swiper-wrapper">
            <%= render partial: "products/swiper", locals: {products: @user.products.last(10)} %>
        </div>
        <div class="swiper-pagination"></div>
    </div>
<% else %>
  <p>You have not listed any games</p>
<% end %>

