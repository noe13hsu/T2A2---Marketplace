<style>
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100vh;
  }

  .swiper-container {
    width: 100%;
    height: 100%;
  }

  .swiper-wrapper {
    margin-bottom: 15px;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 14px;
    background: #F2F2F2;
    height: 37vh;

    justify-content: flex-end;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    object-fit: cover;
  }

  .padding {
    padding-top: 5px;
    padding-bottom: 5px;
  }

  .product-details {
      height: 120px;
      padding: 0 5px 0 5px;
  }

  p {
      margin-bottom: 5px;
  }
</style>
<h1>Your Details</h1>

<p>Name: <%= @user.full_name %></p>
<p>Location: <%= @user.location %></p>
<p>Email: <%= @user.email %></p>
<p>Mobile: <%= @user.mobile %></p>

<%= link_to "Change Password", edit_user_registration_path, class: "btn btn-light border border-dark" %>
<%= link_to "Update Details", edit_user_path(@user), class: "btn btn-light border border-dark" %>
<br>
<br>
<h1>Your Games</h1>
<% if @num_of_products > 0 %>
    <p>You have listed <%=  link_to @num_of_products, your_products_path(@user) %> games</p>
    <div class="swiper-container mySwiper">
        <div class="swiper-wrapper">
            <%= render partial: "products/swiper", locals: {products: @products} %>
        </div>
        <div class="swiper-pagination"></div>
    </div>
<% else %>
  <p>You have not listed any games</p>
<% end %>

