<style>
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
    }
    
    .user-game-details {
        display: flex;
        margin-bottom: 10px;
        background: white;
        padding :10px;
    }

    p {
        margin: 0;
        margin-left: 10px;
    }
</style>

<h1>Your Games</h1>

<% @products.each do |product| %>
    <div class="user-game-details border border-secondary">
        <img src="https://via.placeholder.com/110x130">
        <div>
            <p><%= product.name %></p>
            <p><%= product.console %></p>
            <p>$<%= product.price %></p>
            <p><%= link_to "Update item", edit_product_path(product) %></p>
            <p><%= link_to "Delete item", product, method: :delete, data: { confirm: "Are you sure?" } %></p>
        </div>    
    </div>
<% end %>